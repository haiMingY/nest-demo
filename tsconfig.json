{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"],
      "config/*": ["src/config/*"],
      "interface/*": ["src/interface/*"],
      "controller/*": ["src/controller/*"],
      "service/*": ["src/service/*"]
    },
    "types": ["jest", "node"]
  },
  "references": [
    {
      "path": "../common"
    }
  ]
}
